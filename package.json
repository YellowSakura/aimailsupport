{
  "name": "ai-mail-support",
  "scripts": {
    "build:addon": "npm run build:background && npm run build:outputDisplay && npm run build:promptDisplay && npm run build:options",
    "build:manifest": "node_modules/.bin/json-minify src/manifest.json > ai-mail-support/manifest.json",
    "build:locales": "npm run build:locales-en && npm run build:locales-it",
    "build:locales-en": "node_modules/.bin/json-minify src/locales/en-messages.json > ai-mail-support/_locales/en/messages.json",
    "build:locales-it": "node_modules/.bin/json-minify src/locales/it-messages.json > ai-mail-support/_locales/it/messages.json",
    "build:background": "parcel build src/ts/background.ts --dist-dir ai-mail-support --no-source-maps --no-content-hash --no-cache",
    "build:outputDisplay": "npm run build:outputDisplay:ts && npm run build:outputDisplay:sass",
    "build:outputDisplay:ts": "parcel build src/ts/outputDisplay.ts --dist-dir ai-mail-support/outputDisplay --no-source-maps --no-content-hash --no-cache",
    "build:outputDisplay:sass": "parcel build src/sass/outputDisplay.scss --dist-dir ai-mail-support/outputDisplay --no-source-maps --no-content-hash --no-cache",
    "build:promptDisplay": "npm run build:promptDisplay:ts && npm run build:promptDisplay:sass",
    "build:promptDisplay:ts": "parcel build src/ts/promptDisplay.ts --dist-dir ai-mail-support/promptDisplay --no-source-maps --no-content-hash --no-cache",
    "build:promptDisplay:sass": "parcel build src/sass/promptDisplay.scss --dist-dir ai-mail-support/promptDisplay --no-source-maps --no-content-hash --no-cache",
    "build:options": "parcel build src/html/options.html --dist-dir ai-mail-support/options --public-url /options/ --no-source-maps --no-content-hash --no-cache",
    "build": "npm run build:manifest && npm run build:locales && npm run build:addon",
    "build:package": "npm run build && cd ai-mail-support && zip -r -FS ../ai-mail-support.xpi * --exclude '*.DS_Store*'",
    "quality": "node_modules/.bin/eslint src/ts/*.ts",
    "test": "jest",
    "test:single": "jest -t"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.16",
    "@types/jest": "^30.0",
    "@types/thunderbird-webext-browser": "^127.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "buffer": "^6.0.3",
    "dotenv": "^17.0",
    "eslint": "^9.27.0",
    "jest": "^30.0",
    "jest-webextension-mock": "^4.0",
    "json-minify": "^1.0.0",
    "parcel": "^2.16",
    "posthtml-include": "^2.0.1",
    "ts-jest": "^29.3.4",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "remove-markdown": "^0.6.2"
  }
}
